# MRGCar API Environment Configuration
# Copy this file to .env and fill in your values

# PostgreSQL Database URL
# Local: postgresql://username:password@localhost:5432/mrgcar
# Supabase: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://username:password@localhost:5432/mrgcar

# Server Port
PORT=3000

# JWT Secrets - USE STRONG RANDOM STRINGS IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-32-char-random-secret-here
JWT_REFRESH_SECRET=your-32-char-random-refresh-secret-here

# Admin Panel Bearer Token (legacy auth - use JWT instead)
ADMIN_TOKEN=your-32-char-random-admin-token-here

# Admin Seed Credentials (for initial admin user)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=change-this-strong-password


# Email Configuration (Resend.com)
# Required for Password Reset functionality
RESEND_API_KEY=re_123456789

# EMAIL_FROM - MUST be one of these formats:
#   Format 1: email@example.com
#   Format 2: Name <email@example.com>
# 
# IMPORTANT: If domain is not verified, use: MRGCar <onboarding@resend.dev>
# After domain verification, use: MRGCar <noreply@mrgcar.com>
EMAIL_FROM=MRGCar <onboarding@resend.dev>

# Reply-To Address (optional - users will reply here)
EMAIL_REPLY_TO=support@mrgcar.com
